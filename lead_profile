                        <input type="text" id="l-child_name_2"><input type="text" id="l-child_age_2"><input type="text" id="l-child_gender_2"><input type="date" id="l-child_birthday_2"><input type="text" id="l-child_nickname_2">
                        <input type="text" id="l-child_name_3"><input type="text" id="l-child_age_3"><input type="text" id="l-child_gender_3"><input type="date" id="l-child_birthday_3"><input type="text" id="l-child_nickname_3">
