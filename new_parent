<!-- Pagination -->
<div class="pagination" id="pagination"></div>

<script>
const apiBase = "https://x8ki-letl-twmt.n7.xano.io/api:IzCUrLfD/parent";
let PAGE_SIZE = 10;
let allRecords = [];
let filteredRecords = [];
let currentPage = 1;

// ----------------- Helpers -----------------
function showMessage(html,isError=false){
  const m=document.getElementById('message');
  m.innerHTML=`<div class="${isError?'error':'success'}">${html}</div>`;
  setTimeout(()=>{ if(m.innerHTML.includes('success')) m.innerHTML=''; },3000);
}
function epochToDatetimeLocal(ms){
  if(ms===null||ms===undefined||ms==='') return '';
  const d=new Date(Number(ms));
  if(isNaN(d.getTime())) return '';
  // returns YYYY-MM-DDTHH:MM
  return d.toISOString().slice(0,16);
}
function datetimeLocalToEpoch(value){
  if(!value) return null;
  const t = new Date(value);
  const ms = t.getTime();
  return isNaN(ms)?null:ms;
}

// ----------------- Fetch Records -----------------
async function fetchAllRecords(){
  try{
    const res=await fetch(apiBase);
    allRecords=await res.json();
    // normalize types if needed
    filteredRecords = allRecords.slice();
    renderPage();
    renderPagination();
  }catch(err){console.error(err);showMessage('Error fetching records:'+err,true);}
}

// ----------------- Render Table -----------------
function renderPage(){
  const tbody=document.getElementById('table-body');
  tbody.innerHTML='';
  let start=(currentPage-1)*PAGE_SIZE;
  let end=Math.min(start+PAGE_SIZE,filteredRecords.length);
  for(let i=start;i<end;i++){
    const r=filteredRecords[i];
    const tr=document.createElement('tr');
    const tdId=document.createElement('td');
    tdId.textContent=r.id;
    tr.appendChild(tdId);

    const tdFields=document.createElement('td');
    tdFields.innerHTML=`
      <div class="record-line-grid">
        <div class="record-field"><label>First Name</label><input value="${escapeHtml(r.first_name||'')}" data-field="first_name"></div>
        <div class="record-field"><label>Last Name</label><input value="${escapeHtml(r.last_name||'')}" data-field="last_name"></div>
        <div class="record-field"><label>Created At</label><input type="datetime-local" value="${epochToDatetimeLocal(r.created_at)}" data-field="created_at"></div>
        <div class="record-field"><label>User ID</label><input type="number" value="${r.user_id||''}" data-field="user_id"></div>
      </div>
      <div class="record-line-grid">
        <div class="record-field"><label>Phone</label><input value="${escapeHtml(r.phone||'')}" data-field="phone"></div>
        <div class="record-field"><label>Address</label><input value="${escapeHtml(r.address||'')}" data-field="address"></div>
        <div class="record-field"><label>Is Active</label>
          <select data-field="is_active">
            <option ${r.is_active? 'selected':''}>Yes</option>
            <option ${r.is_active? '':'selected'}>No</option>
          </select>
        </div>
        <div class="record-field"><label>Inactivation Comments</label><input value="${escapeHtml(r.inactivation_reason_comments||'')}" data-field="inactivation_reason_comments"></div>
      </div>
      <div class="record-line-grid">
        <div class="record-field"><label>Last Class Attended Date</label><input type="date" value="${r.last_class_attended_date||''}" data-field="last_class_attended_date"></div>
        <div class="record-field"><label>Email</label><input type="email" value="${escapeHtml(r.email||'')}" data-field="email"></div>
        <div class="record-field"><label>ID</label><input value="${r.id||''}" disabled></div>
        <div class="record-field"><label>&nbsp;</label><div></div></div>
      </div>
    `;
    tr.appendChild(tdFields);

    const tdAct=document.createElement('td');
    tdAct.className='actions';
    const editBtn=document.createElement('button');
    editBtn.textContent='Edit';
    editBtn.onclick=()=>{editRow(tr,r.id,editBtn)};
    tdAct.appendChild(editBtn);
    const delBtn=document.createElement('button');
    delBtn.textContent='Delete';
    delBtn.onclick=()=>{deleteRow(r.id)};
    tdAct.appendChild(delBtn);
    tr.appendChild(tdAct);

    // disable inputs initially
    tr.querySelectorAll('input,select').forEach(inp=>inp.disabled=true);

    tbody.appendChild(tr);
  }
}

// ----------------- Edit / Save -----------------
async function editRow(tr,id,btn){
  if(btn.textContent==='Edit'){
    btn.textContent='Save';
    tr.querySelectorAll('input,select').forEach(inp=>inp.disabled=false);
    // leave ID disabled
    const idInput = tr.querySelector('input[disabled]');
    if(idInput) idInput.disabled=true;
  } else {
    btn.disabled=true;
    const payload={};
    tr.querySelectorAll('input,select').forEach(inp=>{
      if(inp.dataset.field){
        const field = inp.dataset.field;
        if(field==='is_active'){
          payload[field] = (inp.value === 'Yes');
        } else if(field==='user_id'){
          payload[field] = inp.value? parseInt(inp.value) : null;
        } else if(field==='created_at'){
          payload[field] = datetimeLocalToEpoch(inp.value);
        } else {
          payload[field] = inp.value || null;
        }
        inp.disabled=true;
      }
    });
    try{
      const res=await fetch(`${apiBase}/${id}`,{
        method:'PATCH',
        headers:{'Content-Type':'application/json'},
        body:JSON.stringify(payload)
      });
      await res.json();
      showMessage('Record updated successfully!');
      btn.textContent='Edit';
      fetchAllRecords();
    }catch(err){console.error(err); showMessage('Error updating record:'+err,true);}
    btn.disabled=false;
  }
}

// ----------------- Delete -----------------
async function deleteRow(id){
  if(!confirm('Are you sure you want to delete this record?')) return;
  try{
    const res=await fetch(`${apiBase}/${id}`,{method:'DELETE'});
    await res.json();
    showMessage('Record deleted successfully!');
    fetchAllRecords();
  }catch(err){console.error(err); showMessage('Error deleting record:'+err,true);}
}

// ----------------- Search & Pagination -----------------
document.getElementById('searchInput').addEventListener('input',applyFilters);
document.getElementById('pageSizeSelect').addEventListener('change',()=>{
  PAGE_SIZE=parseInt(document.getElementById('pageSizeSelect').value);
  currentPage=1;
  renderPage();
  renderPagination();
});

function applyFilters(){
  let searchValue=document.getElementById('searchInput').value.toLowerCase();
  filteredRecords = allRecords.filter(r=>{
    let hay = ((r.first_name||'') + ' ' + (r.last_name||'') + ' ' + (r.phone||'') + ' ' + (r.email||'') + ' ' + (r.address||'')).toLowerCase();
    return !searchValue || hay.includes(searchValue);
  });
  currentPage = 1;
  renderPage();
  renderPagination();
}

function renderPagination(){
  const pag=document.getElementById('pagination');
  pag.innerHTML='';
  let totalPages=Math.max(1,Math.ceil(filteredRecords.length/PAGE_SIZE));
  for(let i=1;i<=totalPages;i++){
    const btn=document.createElement('button');
    btn.textContent=i;
    btn.className='page-btn'+(i===currentPage?' active':'');
    btn.onclick=()=>{currentPage=i; renderPage(); renderPagination();};
    pag.appendChild(btn);
  }
}

// ----------------- Print -----------------
document.getElementById('printBtn').addEventListener('click',()=>{
  const printWindow=window.open('','','width=1000,height=600');
  let html='<h2>Parent Records</h2><table border="1" cellspacing="0" cellpadding="4"><tr>' +
    '<th>ID</th><th>Created At</th><th>User ID</th><th>First Name</th><th>Last Name</th><th>Phone</th>' +
    '<th>Address</th><th>Is Active</th><th>Inactivation Comments</th><th>Last Class Attended</th><th>Email</th></tr>';
  filteredRecords.forEach(r=>{
    const created = r.created_at ? new Date(Number(r.created_at)).toLocaleString() : '';
    html+=`<tr>
      <td>${r.id||''}</td>
      <td>${escapeHtml(created)}</td>
      <td>${r.user_id||''}</td>
      <td>${escapeHtml(r.first_name||'')}</td>
      <td>${escapeHtml(r.last_name||'')}</td>
      <td>${escapeHtml(r.phone||'')}</td>
      <td>${escapeHtml(r.address||'')}</td>
      <td>${r.is_active? 'Yes':'No'}</td>
      <td>${escapeHtml(r.inactivation_reason_comments||'')}</td>
      <td>${r.last_class_attended_date||''}</td>
      <td>${escapeHtml(r.email||'')}</td>
    </tr>`;
  });
  html+='</table>';
  printWindow.document.write(html);
  printWindow.document.close();
  printWindow.print();
});

// ----------------- Add Form -----------------
document.getElementById('add-form').addEventListener('submit',async(e)=>{
  e.preventDefault();
  const payload = {
    first_name: document.getElementById('first_name').value || null,
    last_name: document.getElementById('last_name').value || null,
    created_at: datetimeLocalToEpoch(document.getElementById('created_at').value),
    user_id: document.getElementById('user_id').value ? parseInt(document.getElementById('user_id').value) : null,
    phone: document.getElementById('phone').value || null,
    address: document.getElementById('address').value || null,
    is_active: (document.getElementById('is_active').value === 'Yes'),
    inactivation_reason_comments: document.getElementById('inactivation_reason_comments').value || null,
    last_class_attended_date: document.getElementById('last_class_attended_date').value || null,
    email: document.getElementById('email').value || null
  };
  try{
    const res=await fetch(apiBase,{
      method:'POST',
      headers:{'Content-Type':'application/json'},
      body:JSON.stringify(payload)
    });
    await res.json();
    showMessage('Parent added successfully!');
    e.target.reset();
    fetchAllRecords();
  }catch(err){console.error(err);showMessage('Error adding parent:'+err,true);}
});

// ----------------- Utility: escape HTML to avoid breaking the table -----------------
function escapeHtml(unsafe){
  if(unsafe===null || unsafe===undefined) return '';
  return String(unsafe)
    .replace(/&/g, "&amp;")
    .replace(/</g, "&lt;")
    .replace(/>/g, "&gt;")
    .replace(/\"/g, "&quot;")
    .replace(/\'/g, "&#039;");
}

// ----------------- Initialize -----------------
fetchAllRecords();
</script>
</body>
</html>
